extends layout 

block content 
    h1= title 
    .flex-column 
        p= pepper.description 

        h2 What sauces use this pepper?
        if sauces.length > 0
            ul 
                each sauce in sauces 
                    li 
                        a(href=sauce.url) #{sauce.name}
        else 
            p Hmm, no sauces contain this pepper yet!
        a.btn(href=`${pepper.id}/update`) Update Pepper 
        a.btn.caution(href=`${pepper.id}/delete`) Delete Pepper 